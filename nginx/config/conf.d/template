server {
    listen 80;
    listen [::]:80;

    server_name *.local;

    root /projects/*/public;
    
    index index.php index.html index.htm;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ \.php$ {
        root /app/public;

        set $server '*';

        fastcgi_pass    $server:9000;
        fastcgi_index   index.php;
        include         fastcgi.conf;
    }
}
